@model Users

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration</h1>
<p>* = Required Field</p>

<form asp-controller="Home" asp-action="MakeNewUser">
    <div asp-validation-summary="ModelOnly">
        <span>Please correct the following errors</span>
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName" class="alert-danger"></span>
    </div>
    <div class="form-groups">
        <label>First Name</label>
        <input type="text" class="form-control" name="firstName" placeholder="First Name" pattern="(^[A-Z]{1}[a-z]{1,29}$)" />
    </div>
    <div>
        <label>Last Name</label>
        <input type="text" class="form-control" name="lastName" placeholder="Last Name" pattern="(^[A-Z]{1}[a-z]{1,29}$)" />
    </div>
    <div class="form-group">
        <label>Email*</label>
        <input type="text" class="form-control" name="email" placeholder="Email" pattern="(^[A-Za-z0-9._-]{1,64}@('@'){1}[A-Za-z0-9-]{1,63}\.{1}[a-z]{2,3}$)" required />
    </div>
    <div class="form-group">
        <label>Date of Birth</label>
        <input type="date" class="form-control" name="dateOfBirth" />
    </div>
    <div class="form-group">
        <label>Password*</label>
        <input type="password" class="form-control" name="password" placeholder="Password" required />
    </div>
    <div class="form-group">
        <label>Starting Funds</label>
        <input type ="number" class="form-control" name="funds" required />
    </div>
    <div class="form-group">
        <input type="submit" class="form-control btn btn-primary" />
    </div>
</form>

